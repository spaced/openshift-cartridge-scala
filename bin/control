#!/bin/bash -e

PATH=$PATH:${OPENSHIFT_DATA_DIR}/sbt/bin/:/bin/:/usr/bin

function start {
    cd $OPENSHIFT_REPO_DIR
    nohup ./start.sh >> $OPENSHIFT_SCALA_LOG_DIR/scala.log 2>&1  &
}

function stop {
    killall java || true
}

function restart {
    stop
    start
}

function build {
    # nothing
}

function tidy {
    shopt -s dotglob
    rm -rf $OPENSHIFT_SCALA_LOG_DIR/*
    rm -rf $OPENSHIFT_TMP_DIR/*
    rm -rf "$OPENSHIFT_HOMEDIR"/.ivy2/*
}

function catchall {
    echo ""
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       build ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
